{% extends 'base.html.twig' %}

{% block body %}
    <h1>Travel</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ travel.id }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ travel.destination }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ travel.link }}</td>
            </tr>
            <tr>
                <th>Webprice</th>
                <td>{{ travel.webPrice }}</td>
            </tr>
            <tr>
                <th>Targetprice</th>
                <td>{{ travel.targetPrice }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if travel.date %}{{ travel.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Roundtrip</th>
                <td>{% if travel.roundTrip %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Returndate</th>
                <td>{% if travel.returnDate %}{{ travel.returnDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if travel.createdAt %}{{ travel.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if travel.updatedAt %}{{ travel.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('travel_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('travel_edit', { 'id': travel.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
