{% extends 'base.html.twig' %}

{% block body %}
    <h1>Voyage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ voyage.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ voyage.city }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ voyage.link }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ voyage.description }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ voyage.position }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ voyage.priority }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if voyage.createdAt %}{{ voyage.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if voyage.updatedAt %}{{ voyage.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voyage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('voyage_edit', { 'id': voyage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
